<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rootDriverMain"
    tools:context=".view.driver.activity.DriverMainActivity">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:id="@+id/driver_map_fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="40dp"
            android:paddingHorizontal="25dp"
            android:clipToPadding="false"
            android:layout_gravity="top|end">
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/driver_ride_timer_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:cardCornerRadius="@dimen/corner_radius_standard"
                app:cardElevation="8dp">

                <TextView
                    android:id="@+id/driver_ride_timer"
                    android:layout_width="100dp"
                    android:layout_height="38dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginHorizontal="10dp"
                    android:textAlignment="center"
                    android:fontFamily="@font/tw_regular"
                    android:textSize="22sp"
                    android:textColor="@color/primary" />
            </com.google.android.material.card.MaterialCardView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/finished_ride_fragment_driver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="80dp"
            android:layout_gravity="bottom"/>

        <RelativeLayout
            android:id="@+id/driver_new_route_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="80dp"
            android:layout_gravity="bottom"/>

        <com.google.android.material.button.MaterialButtonToggleGroup
            android:id="@+id/toggleDriverState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="48dp"
            app:singleSelection="true"
            android:visibility="gone">
            <Button
                android:id="@+id/driverStateActive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/button_active"
                style="?attr/materialButtonOutlinedStyle"/>
            <Button
                android:id="@+id/driverStateInactive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/button_inactive"
                style="?attr/materialButtonOutlinedStyle"/>
        </com.google.android.material.button.MaterialButtonToggleGroup>

        <com.google.android.material.bottomappbar.BottomAppBar
            android:id="@+id/bottomAppBarDriverMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:visibility="gone"
            style="@style/Widget.MaterialComponents.BottomAppBar.PrimarySurface"
            app:menu="@menu/bottom_app_bar"/>

        <!-- AppBar -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:layout_margin="16dp"
            app:cardCornerRadius="@dimen/corner_radius_standard"
            app:cardElevation="16dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageButton
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_baseline_account_details_24"
                    android:onClick="showAccountDetails"/>
                <ImageButton
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_baseline_inbox_24"
                    android:onClick="showInbox"/>
                <ImageButton
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_baseline_history_24"
                    android:onClick="showRideHistory"/>
                <ImageButton
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_baseline_exit_to_app_24"
                    android:onClick="logout"/>
                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="1dp"
                    android:layout_marginVertical="6dp"
                    android:layout_height="match_parent"/>
                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="8dp"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:text="@string/button_active"
                    android:onClick="changeActivityStatus"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</androidx.constraintlayout.widget.ConstraintLayout>