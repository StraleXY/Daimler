<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.common.fragment.UserReportsFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="32dp">

    <!-- Date Picker -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/selectDateRange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="48dp"
        android:text="@string/button_select_date_range"
        android:layout_gravity="center_horizontal"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

    <!-- Rides Chart -->
    <LinearLayout
        android:id="@+id/ridesChartLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:orientation="vertical">
        <com.tim1.daimler.util.components.charts.CharterBar
            android:id="@+id/ridesChart"
            android:layout_width="fill_parent"
            android:layout_height="75dp"/>
        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            app:dividerColor="?colorOnSurface"
            app:dividerInsetStart="1dp"
            app:dividerInsetEnd="1dp"/>
        <TextView
            android:id="@+id/max_rides_taken_graph"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RIDES TAKEN [max 7]"
            android:textAlignment="center"
            android:fontFamily="@font/tw_light"
            android:textColor="?colorOnSurface"
            android:layout_marginTop="2dp"
            android:textSize="14sp"/>
    </LinearLayout>

    <!-- Distance Chart -->
    <LinearLayout
        android:id="@+id/distanceChartLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:orientation="vertical">
        <com.tim1.daimler.util.components.charts.CharterBar
            android:id="@+id/distanceChart"
            android:layout_width="fill_parent"
            android:layout_height="75dp"/>
        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            app:dividerColor="?colorOnSurface"
            app:dividerInsetStart="1dp"
            app:dividerInsetEnd="1dp"/>
        <TextView
            android:id="@+id/max_distance_taken_graph"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DISTANCE DRIVEN [max 12km]"
            android:textAlignment="center"
            android:fontFamily="@font/tw_light"
            android:textColor="?colorOnSurface"
            android:layout_marginTop="2dp"
            android:textSize="14sp"/>
    </LinearLayout>

    <!-- Cost Chart -->
    <LinearLayout
        android:id="@+id/costChartLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:orientation="vertical">
        <com.tim1.daimler.util.components.charts.CharterBar
            android:id="@+id/costChart"
            android:layout_width="fill_parent"
            android:layout_height="75dp"/>
        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            app:dividerColor="?colorOnSurface"
            app:dividerInsetStart="1dp"
            app:dividerInsetEnd="1dp"/>
        <TextView
            android:id="@+id/max_ride_cost_graph"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RIDE COST"
            android:textAlignment="center"
            android:fontFamily="@font/tw_light"
            android:textColor="?colorOnSurface"
            android:layout_marginTop="2dp"
            android:textSize="14sp"/>
    </LinearLayout>

    <!-- Stats for rides -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="16dp"
        android:orientation="horizontal">
        <!-- total Rides -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.45"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_total_rides_taken"
                android:textAlignment="center"
                android:fontFamily="@font/tw_light"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/totalRides"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="98"
                android:textAlignment="center"
                android:fontFamily="@font/anton_regular"
                android:textColor="@color/primary_light"
                android:textSize="48sp"/>
        </LinearLayout>
        <!-- Average rides -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.45"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/total_average_rides_taken"
                android:textAlignment="center"
                android:fontFamily="@font/tw_light"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/averageRides"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5"
                android:textAlignment="center"
                android:fontFamily="@font/anton_regular"
                android:textColor="@color/primary_light"
                android:textSize="48sp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Stats for distance -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="48dp"
        android:orientation="horizontal">
        <!-- Total distance -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.55"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_total_distance_driven"
                android:textAlignment="center"
                android:fontFamily="@font/tw_light"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/totalDistance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="156km"
                android:textAlignment="center"
                android:fontFamily="@font/anton_regular"
                android:textColor="@color/primary_light"
                android:textSize="48sp"/>
        </LinearLayout>
        <!-- Average distance -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.55"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_average_distance_driven"
                android:textAlignment="center"
                android:fontFamily="@font/tw_light"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/averageDistance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="8km"
                android:textAlignment="center"
                android:fontFamily="@font/anton_regular"
                android:textColor="@color/primary_light"
                android:textSize="48sp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Stats for cost -->
    <LinearLayout
        android:id="@+id/rideCostStats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="48dp"
        android:orientation="horizontal">
        <!-- Total cost -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.55"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_total_ride_cost"
                android:textAlignment="center"
                android:fontFamily="@font/tw_light"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/totalCost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="156km"
                android:textAlignment="center"
                android:fontFamily="@font/anton_regular"
                android:textColor="@color/primary_light"
                android:textSize="48sp"/>
        </LinearLayout>
        <!-- Average cost -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.55"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_average_ride_cost"
                android:textAlignment="center"
                android:fontFamily="@font/tw_light"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/averageCost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="8km"
                android:textAlignment="center"
                android:fontFamily="@font/anton_regular"
                android:textColor="@color/primary_light"
                android:textSize="48sp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>