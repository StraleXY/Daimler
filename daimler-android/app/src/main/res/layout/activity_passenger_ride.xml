<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.passenger.activity.PassengerRideActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingVertical="45dp"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:gravity="center"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="32dp"
                android:layout_marginVertical="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="16dp"
                    app:tint="@color/primary"
                    android:onClick="backClicked"
                    android:src="@drawable/ic_baseline_arrow_back_24"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_ride"
                    android:fontFamily="@font/anton_regular"
                    android:textSize="40sp"
                    android:textColor="@color/primary"/>
            </LinearLayout>

            <!-- Route card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="8dp"
                app:cardCornerRadius="@dimen/corner_radius_standard"
                app:cardElevation="8dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="32dp"
                    android:paddingTop="32dp"
                    android:paddingBottom="20dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_gravity="center">
                        <androidx.constraintlayout.widget.Placeholder
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/subtitle_route"
                            android:textAlignment="center"
                            android:fontFamily="@font/tw_regular"
                            android:textSize="24sp"
                            android:textColor="@color/primary"
                            android:layout_marginBottom="5dp"/>
                        <ImageView
                            android:id="@+id/isFavouriteStar"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_marginLeft="5dp"
                            android:visibility="gone"
                            android:src="@drawable/ic_baseline_star_rate_24"/>
                        <androidx.constraintlayout.widget.Placeholder
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"/>
                    </LinearLayout>
                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="8dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.2"
                            android:text="@string/ride_from"
                            android:fontFamily="@font/tw_light"
                            android:textColor="@color/primary"
                            android:textSize="16sp"
                            android:layout_marginVertical="@dimen/row_spacing_standard"
                            android:textAlignment="viewEnd"
                            android:layout_marginHorizontal="10dp"/>
                        <TextView
                            android:id="@+id/rideDetailsFrom"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.8"
                            android:fontFamily="@font/tw_regular"
                            android:textSize="16sp"
                            android:layout_marginVertical="@dimen/row_spacing_standard"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.2"
                            android:text="@string/ride_to"
                            android:fontFamily="@font/tw_light"
                            android:textColor="@color/primary"
                            android:textSize="16sp"
                            android:layout_marginVertical="@dimen/row_spacing_standard"
                            android:textAlignment="viewEnd"
                            android:layout_marginHorizontal="10dp"/>
                        <TextView
                            android:id="@+id/rideDetailsTo"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.8"
                            android:fontFamily="@font/tw_regular"
                            android:textSize="16sp"
                            android:layout_marginVertical="@dimen/row_spacing_standard"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.2"
                            android:text="@string/ride_estimated_time"
                            android:fontFamily="@font/tw_light"
                            android:textColor="@color/primary"
                            android:textSize="16sp"
                            android:layout_marginVertical="@dimen/row_spacing_standard"
                            android:textAlignment="viewEnd"
                            android:layout_marginHorizontal="10dp"/>
                        <TextView
                            android:id="@+id/rideDetailsEstimatedTime"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.8"
                            android:fontFamily="@font/tw_regular"
                            android:textSize="16sp"
                            android:layout_marginVertical="@dimen/row_spacing_standard"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.2"
                            android:text="@string/ride_length"
                            android:fontFamily="@font/tw_light"
                            android:textColor="@color/primary"
                            android:textSize="16sp"
                            android:layout_marginVertical="@dimen/row_spacing_standard"
                            android:textAlignment="viewEnd"
                            android:layout_marginHorizontal="10dp"/>
                        <TextView
                            android:id="@+id/rideDetailsLength"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.8"
                            android:fontFamily="@font/tw_regular"
                            android:textSize="16sp"
                            android:layout_marginVertical="@dimen/row_spacing_standard"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:layout_marginBottom="20dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.2"
                            android:text="@string/ride_price"
                            android:fontFamily="@font/tw_light"
                            android:textColor="@color/primary"
                            android:textSize="16sp"
                            android:layout_marginVertical="@dimen/row_spacing_standard"
                            android:textAlignment="viewEnd"
                            android:layout_marginHorizontal="10dp"/>
                        <TextView
                            android:id="@+id/rideDetailsPrice"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.8"
                            android:fontFamily="@font/tw_regular"
                            android:textSize="16sp"
                            android:layout_marginVertical="@dimen/row_spacing_standard"/>
                    </LinearLayout>
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/addToFavouritesButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/add_to_favourites"
                        android:layout_gravity="end"
                        android:textSize="@dimen/button_text_small"
                        style="@style/Widget.MaterialComponents.Button.TextButton"/>
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/scheduleARideButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/schedule_a_ride"
                        android:layout_gravity="end"
                        android:textSize="@dimen/button_text_small"
                        style="@style/Widget.MaterialComponents.Button.TextButton"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Map -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/passenger_ride_map_fragment_container"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="8dp"
                app:cardCornerRadius="@dimen/corner_radius_standard"
                app:cardElevation="8dp"/>

            <!-- Driver card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="8dp"
                app:cardCornerRadius="@dimen/corner_radius_standard"
                app:cardElevation="8dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="32dp"
                    android:paddingBottom="20dp"
                    android:paddingHorizontal="32dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/subtitle_driver"
                        android:textAlignment="center"
                        android:fontFamily="@font/tw_regular"
                        android:textSize="24sp"
                        android:textColor="@color/primary"
                        android:layout_marginBottom="5dp"/>
                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="8dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.75"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginVertical="@dimen/row_spacing_small"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.3"
                                    android:text="@string/ride_driver_name"
                                    android:fontFamily="@font/tw_light"
                                    android:textColor="@color/primary"
                                    android:textSize="16sp"
                                    android:layout_marginVertical="@dimen/row_spacing_standard"
                                    android:textAlignment="viewEnd"
                                    android:layout_marginHorizontal="10dp"/>
                                <TextView
                                    android:id="@+id/rideDetailsDriverName"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.7"
                                    android:fontFamily="@font/tw_regular"
                                    android:textSize="16sp"
                                    android:layout_marginVertical="@dimen/row_spacing_standard"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginVertical="@dimen/row_spacing_small"
                                android:layout_marginBottom="14dp"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.3"
                                    android:text="@string/ride_driver_email"
                                    android:fontFamily="@font/tw_light"
                                    android:textColor="@color/primary"
                                    android:textSize="16sp"
                                    android:layout_marginVertical="@dimen/row_spacing_standard"
                                    android:textAlignment="viewEnd"
                                    android:layout_marginHorizontal="10dp"/>
                                <TextView
                                    android:id="@+id/rideDetailsDriverEmail"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.7"
                                    android:fontFamily="@font/tw_regular"
                                    android:textSize="16sp"
                                    android:layout_marginVertical="@dimen/row_spacing_standard"/>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.25"
                            android:orientation="vertical">
                            <!-- Profile Picture -->
                            <androidx.cardview.widget.CardView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                app:cardCornerRadius="30dp"
                                android:layout_marginTop="15dp"
                                android:layout_gravity="center"
                                app:cardBackgroundColor="@color/primary_light">
                                <androidx.cardview.widget.CardView
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    app:cardCornerRadius="30dp"
                                    android:layout_gravity="center">
                                    <ImageView
                                        android:id="@+id/driverProfileImage"
                                        android:layout_width="60dp"
                                        android:layout_height="60dp"
                                        android:src="@drawable/user_default"
                                        android:scaleType="centerCrop"/>
                                </androidx.cardview.widget.CardView>
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>
                    </LinearLayout>
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/showMessagesButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/show_messages"
                        android:layout_gravity="end"
                        android:layout_marginTop="10dp"
                        android:textSize="@dimen/button_text_small"
                        style="@style/Widget.MaterialComponents.Button.TextButton"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Other passengers card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/passengerListCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="8dp"
                android:paddingBottom="20dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="@dimen/corner_radius_standard"
                app:cardElevation="8dp"/>

            <!-- Info card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="8dp"
                app:cardCornerRadius="@dimen/corner_radius_standard"
                app:cardElevation="8dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="32dp"
                    android:paddingBottom="20dp"
                    android:paddingHorizontal="32dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/subtitle_info"
                        android:textAlignment="center"
                        android:fontFamily="@font/tw_regular"
                        android:textSize="24sp"
                        android:textColor="@color/primary"
                        android:layout_marginBottom="5dp"/>
                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="8dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.25"
                            android:text="@string/ride_status"
                            android:fontFamily="@font/tw_light"
                            android:textColor="@color/primary"
                            android:textSize="16sp"
                            android:layout_marginVertical="@dimen/row_spacing_standard"
                            android:textAlignment="viewEnd"
                            android:layout_marginHorizontal="10dp"/>
                        <TextView
                            android:id="@+id/rideDetailsStatus"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.75"
                            android:fontFamily="@font/tw_regular"
                            android:textSize="16sp"
                            android:layout_marginVertical="@dimen/row_spacing_standard"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.25"
                            android:text="@string/ride_date"
                            android:fontFamily="@font/tw_light"
                            android:textColor="@color/primary"
                            android:textSize="16sp"
                            android:layout_marginVertical="@dimen/row_spacing_standard"
                            android:textAlignment="viewEnd"
                            android:layout_marginHorizontal="10dp"/>
                        <TextView
                            android:id="@+id/rideDetailsDate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.75"
                            android:fontFamily="@font/tw_regular"
                            android:textSize="16sp"
                            android:layout_marginVertical="@dimen/row_spacing_standard"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:visibility="gone">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.25"
                            android:text="@string/ride_start_time"
                            android:fontFamily="@font/tw_light"
                            android:textColor="@color/primary"
                            android:textSize="16sp"
                            android:layout_marginVertical="@dimen/row_spacing_standard"
                            android:textAlignment="viewEnd"
                            android:layout_marginHorizontal="10dp"/>
                        <TextView
                            android:id="@+id/rideDetailsStartTime"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.75"
                            android:fontFamily="@font/tw_regular"
                            android:textSize="16sp"
                            android:layout_marginVertical="@dimen/row_spacing_standard"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:visibility="gone">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.25"
                            android:text="@string/ride_finish_time"
                            android:fontFamily="@font/tw_light"
                            android:textColor="@color/primary"
                            android:textSize="16sp"
                            android:layout_marginVertical="@dimen/row_spacing_standard"
                            android:textAlignment="viewEnd"
                            android:layout_marginHorizontal="10dp"/>
                        <TextView
                            android:id="@+id/rideDetailsFinishTime"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.75"
                            android:fontFamily="@font/tw_regular"
                            android:textSize="16sp"
                            android:layout_marginVertical="@dimen/row_spacing_standard"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.25"
                            android:text="@string/ride_babies"
                            android:fontFamily="@font/tw_light"
                            android:textColor="@color/primary"
                            android:textSize="16sp"
                            android:layout_marginVertical="@dimen/row_spacing_standard"
                            android:textAlignment="viewEnd"
                            android:layout_marginHorizontal="10dp"/>
                        <TextView
                            android:id="@+id/rideDetailsBabies"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.75"
                            android:fontFamily="@font/tw_regular"
                            android:textSize="16sp"
                            android:layout_marginVertical="@dimen/row_spacing_standard"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.25"
                            android:text="@string/ride_pets"
                            android:fontFamily="@font/tw_light"
                            android:textColor="@color/primary"
                            android:textSize="16sp"
                            android:layout_marginVertical="@dimen/row_spacing_standard"
                            android:textAlignment="viewEnd"
                            android:layout_marginHorizontal="10dp"/>
                        <TextView
                            android:id="@+id/rideDetailsPets"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.75"
                            android:fontFamily="@font/tw_regular"
                            android:textSize="16sp"
                            android:layout_marginVertical="@dimen/row_spacing_standard"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.25"
                            android:text="@string/ride_split_fare"
                            android:fontFamily="@font/tw_light"
                            android:textColor="@color/primary"
                            android:textSize="16sp"
                            android:layout_marginVertical="@dimen/row_spacing_standard"
                            android:textAlignment="viewEnd"
                            android:layout_marginHorizontal="10dp"/>
                        <TextView
                            android:id="@+id/rideDetailsSplitFare"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.75"
                            android:fontFamily="@font/tw_regular"
                            android:textSize="16sp"
                            android:layout_marginVertical="@dimen/row_spacing_standard"/>
                    </LinearLayout>

                    <!-- Driver review -->
                    <LinearLayout
                        android:id="@+id/driverReviewLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <com.google.android.material.divider.MaterialDivider
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="8dp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.25"
                                android:text="@string/driver_rate"
                                android:fontFamily="@font/tw_light"
                                android:textColor="@color/primary"
                                android:textSize="16sp"
                                android:layout_marginVertical="@dimen/row_spacing_standard"
                                android:textAlignment="viewEnd"
                                android:layout_marginHorizontal="10dp"/>
                            <LinearLayout
                                android:id="@+id/driverRateStarsLayout"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.75"
                                android:orientation="horizontal"
                                android:layout_marginVertical="@dimen/row_spacing_standard">
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_baseline_star_outline_24"/>
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_baseline_star_outline_24"/>
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_baseline_star_outline_24"/>
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_baseline_star_outline_24"/>
