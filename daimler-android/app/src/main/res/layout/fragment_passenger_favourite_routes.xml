<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.passenger.fragment.PassengerFavouriteRoutesFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingVertical="32dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title_favourite_routes"
        android:textAlignment="center"
        android:fontFamily="@font/tw_regular"
        android:textSize="24sp"
        android:textColor="@color/primary"
        android:layout_marginBottom="5dp"/>
    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        app:dividerInsetEnd="32dp"
        app:dividerInsetStart="32dp"/>

    <com.tim1.daimler.util.components.WrapContentListView
        android:id="@+id/favouriteRoutesList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/transparent"
        android:clipToPadding="false"
        android:scrollbars="none"/>

</LinearLayout>