<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.passenger.fragment.PassengerListFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="32dp"
        android:paddingVertical="32dp">

        <TextView
            android:id="@+id/passengerListHeaderText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_passenger_list"
            android:textAlignment="center"
            android:fontFamily="@font/tw_regular"
            android:textSize="24sp"
            android:textColor="@color/primary"
            android:layout_marginBottom="5dp"/>
        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"/>

        <com.tim1.daimler.util.components.WrapContentListView
            android:id="@+id/passengerList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:layout_marginVertical="20dp"
            android:divider="@color/transparent"
            android:scrollbars="none" />
    </LinearLayout>
</FrameLayout>