<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.common.fragment.UserBasicInfoFragment"
    android:orientation="vertical">

    <!-- Profile Picture -->
    <androidx.cardview.widget.CardView
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:cardCornerRadius="45dp"
        android:layout_marginTop="46dp"
        android:layout_marginBottom="36dp"
        android:layout_gravity="center">
        <ImageView
            android:id="@+id/infoProfilePicture"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop"/>
    </androidx.cardview.widget.CardView>

    <!-- Base info -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:layout_marginEnd="4dp"
            android:alpha="0.75"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="viewEnd"
                android:text="@string/label_name"
                android:fontFamily="@font/tw_extra_light"
                android:textColor="@color/primary"
                android:textSize="17sp"
                android:layout_marginVertical="@dimen/row_spacing_standard"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="viewEnd"
                android:text="@string/label_email"
                android:fontFamily="@font/tw_extra_light"
                android:textColor="@color/primary"
                android:textSize="17sp"
                android:layout_marginVertical="@dimen/row_spacing_standard"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="viewEnd"
                android:text="@string/label_number"
                android:fontFamily="@font/tw_extra_light"
                android:textColor="@color/primary"
                android:textSize="17sp"
                android:layout_marginVertical="@dimen/row_spacing_standard"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="viewEnd"
                android:text="@string/label_address"
                android:fontFamily="@font/tw_extra_light"
                android:textColor="@color/primary"
                android:textSize="17sp"
                android:layout_marginVertical="@dimen/row_spacing_standard"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:layout_marginStart="4dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/infoFullName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Strahinja Sekulic"
                android:fontFamily="@font/tw_regular"
                android:textSize="17sp"
                android:layout_marginVertical="@dimen/row_spacing_standard"/>
            <TextView
                android:id="@+id/infoEmail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="strahinja0123@gmail.com"
                android:fontFamily="@font/tw_regular"
                android:textSize="17sp"
                android:layout_marginVertical="@dimen/row_spacing_standard"/>
            <TextView
                android:id="@+id/infoPhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="0628583638"
                android:fontFamily="@font/tw_regular"
                android:textSize="17sp"
                android:layout_marginVertical="@dimen/row_spacing_standard"/>
            <TextView
                android:id="@+id/infoAddress"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Fruskogorska 25"
                android:fontFamily="@font/tw_regular"
                android:textSize="17sp"
                android:layout_marginVertical="@dimen/row_spacing_standard"/>

        </LinearLayout>
    </LinearLayout>

    <!-- Edit -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/infoEditButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="16dp"
        android:layout_marginHorizontal="16dp"
        android:text="@string/button_edit"
        android:layout_gravity="end"
        style="@style/Widget.MaterialComponents.Button.TextButton"/>

</LinearLayout>