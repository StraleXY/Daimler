<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/customAppBar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom|center_horizontal"
    android:layout_marginHorizontal="16dp"
    app:cardCornerRadius="@dimen/corner_radius_standard"
    app:cardElevation="16dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="38dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.45"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="hidden"
                    android:textSize="36sp"
                    android:textAlignment="viewEnd"
                    android:fontFamily="@font/economica"
                    android:visibility="invisible"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="New Route"
                    android:layout_gravity="center_vertical"
                    android:textSize="22sp"
                    android:textColor="?attr/colorControlNormal"
                    android:fontFamily="@font/tw_light"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.55"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/driver_new_route_price"
                    android:text="360din"
                    android:textSize="48sp"
                    android:textAlignment="viewEnd"
                    android:fontFamily="@font/economica"/>
                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:dividerColor="?attr/colorControlNormal"
                    android:layout_marginVertical="@dimen/row_spacing_standard"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/driver_new_route_details"
                    android:text="17min | 3.6km"
                    android:textSize="20sp"
                    android:textAlignment="viewEnd"
                    android:fontFamily="@font/tw_extra_light"/>
            </LinearLayout>
        </LinearLayout>

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:dividerInsetStart="38dp"
            app:dividerInsetEnd="38dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="38dp"
            android:layout_marginTop="28dp"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_width="78dp"
                android:layout_height="78dp"
                app:cardCornerRadius="39dp"
                android:layout_gravity="center"
                app:cardBackgroundColor="@color/primary_light">
                <androidx.cardview.widget.CardView
                    android:layout_width="74dp"
                    android:layout_height="74dp"
                    app:cardCornerRadius="38dp"
                    android:layout_gravity="center">
                    <ImageView
                        android:layout_width="74dp"
                        android:layout_height="74dp"
                        android:id="@+id/driver_new_route_profile_picture"
                        android:src="@drawable/my_profile_pic"
                        android:scaleType="centerCrop"/>
                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/driver_new_route_name"
                    android:text="Strahinja Sekulic"
                    android:textSize="36sp"
                    android:textAlignment="viewEnd"
                    android:fontFamily="@font/economica"/>
                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:dividerColor="?attr/colorControlNormal"
                    app:dividerInsetStart="32dp"
                    android:layout_marginTop="6dp"/>
                <com.google.android.material.button.MaterialButton
                    android:layout_width="60dp"
                    android:layout_height="36dp"
                    android:id="@+id/open_inbox_driver"
                    android:text="Inbox"
                    android:layout_gravity="end"
                    android:textAlignment="viewEnd"
                    style="@style/Widget.MaterialComponents.Button.TextButton"/>
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="28dp"
            android:layout_marginTop="32dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/rejectRideButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:layout_marginHorizontal="5dp"
                android:text="REJECT"
                app:strokeColor="?attr/colorError"
                android:textColor="?attr/colorError"
                android:layout_gravity="center"
                android:textAlignment="center"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/startRideButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:layout_marginHorizontal="5dp"
                android:text="START"
                android:layout_gravity="center"
                android:textAlignment="center"
                style="@style/Widget.MaterialComponents.Button"/>
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>